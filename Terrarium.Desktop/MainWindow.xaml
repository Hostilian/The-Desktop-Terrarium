<Window x:Class="Terrarium.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desktop Terrarium - God Simulator"
        WindowState="Normal"
        Width="600"
        Height="450"
        ShowActivated="True"
        ResizeMode="CanResize"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        Closing="Window_Closing"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        Topmost="True">

    <Window.Resources>
        <!-- Clean, minimal styling inspired by WorldBox -->
        <SolidColorBrush x:Key="PanelBackground" Color="#DD000000"/>
        <SolidColorBrush x:Key="PanelBorder" Color="#55FFFFFF"/>
        <SolidColorBrush x:Key="ButtonBackground" Color="#AA333333"/>
        <SolidColorBrush x:Key="ButtonHover" Color="#CC444444"/>
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FFAA00"/>

        <Style x:Key="CleanButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ButtonHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Canvas - Full screen background -->
        <Canvas x:Name="RenderCanvas" Background="Transparent" MouseLeftButtonDown="RenderCanvas_MouseLeftButtonDown"/>

        <!-- Top Resource Bar -->
        <Border Background="{StaticResource PanelBackground}"
                BorderBrush="{StaticResource PanelBorder}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Margin="10"
                Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Time Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="PlayPauseButton" Content="â¸ï¸" Style="{StaticResource CleanButton}" Width="40" Height="40" Click="PlayPauseButton_Click"/>
                    <Button x:Name="SpeedButton" Content="1x" Style="{StaticResource CleanButton}" Width="50" Height="40" Click="SpeedButton_Click"/>
                </StackPanel>

                <!-- Population Bars -->
                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="FactionPopulationPanel">
                    <!-- Faction populations will be added here dynamically -->
                    <TextBlock Text="Faction Populations" Foreground="{StaticResource TextColor}" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                </StackPanel>

                <!-- Minimap -->
                <Border Grid.Column="2" Background="#22000000" BorderBrush="{StaticResource PanelBorder}" BorderThickness="1" CornerRadius="4" Width="120" Height="40" Margin="10,0">
                    <Canvas x:Name="MinimapCanvas" Background="Transparent"/>
                </Border>

                <!-- Window Controls -->
