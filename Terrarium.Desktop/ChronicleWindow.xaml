<Window x:Class="Terrarium.Desktop.ChronicleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Terrarium.Desktop"
        mc:Ignorable="d"
        Title="World Chronicle" Height="600" Width="800"
        WindowStyle="ToolWindow" ResizeMode="CanResize"
        Background="#1a1a2e" Foreground="#e6e6e6"
        FontFamily="Segoe UI" FontSize="12">

    <Window.Resources>
        <SolidColorBrush x:Key="WindowBackground" Color="#1a1a2e"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#16213e"/>
        <SolidColorBrush x:Key="AccentColor" Color="#0f3460"/>
        <SolidColorBrush x:Key="TextColor" Color="#e6e6e6"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#b0b0b0"/>
        <SolidColorBrush x:Key="MajorEventColor" Color="#e74c3c"/>
        <SolidColorBrush x:Key="MediumEventColor" Color="#f39c12"/>
        <SolidColorBrush x:Key="MinorEventColor" Color="#27ae60"/>
        <SolidColorBrush x:Key="AncientEventColor" Color="#9b59b6"/>
    </Window.Resources>

    <Grid Background="{StaticResource WindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PanelBackground}" BorderBrush="{StaticResource AccentColor}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="15,10">
                <TextBlock Text="ðŸ“œ" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="World Chronicle" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBlock x:Name="EventCountText" Text="(0 events)" FontSize="12" Foreground="{StaticResource SecondaryTextColor}" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="15">

                <!-- Named Characters Section -->
                <Border Background="{StaticResource PanelBackground}" CornerRadius="5" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <TextBlock Text="ðŸ›ï¸ Notable Figures" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <ListBox x:Name="NamedCharactersList" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextColor}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,5">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="{StaticResource TextColor}"/>
                                        <TextBlock Text="{Binding Biography}" FontSize="11" Foreground="{StaticResource SecondaryTextColor}" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Faction, StringFormat='Faction: {0}'}" FontSize="10" Foreground="{StaticResource SecondaryTextColor}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <TextBlock x:Name="NoCharactersText" Text="No notable figures have emerged yet..." FontStyle="Italic" Foreground="{StaticResource SecondaryTextColor}" Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <!-- Chronicle Events -->
                <Border Background="{StaticResource PanelBackground}" CornerRadius="5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="ðŸ“š Chronicle of Events" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <ListBox x:Name="ChronicleList" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextColor}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="3" Padding="8" Margin="0,2">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="AncientHistory">
                                                        <Setter Property="Background" Value="#9b59b622"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource AncientEventColor}"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Importance}" Value="Major">
                                                        <Setter Property="Background" Value="#e74c3c22"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource MajorEventColor}"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Importance}" Value="Medium">
                                                        <Setter Property="Background" Value="#f39c1222"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource MediumEventColor}"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Importance}" Value="Minor">
                                                        <Setter Property="Background" Value="#27ae6022"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource MinorEventColor}"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Foreground="{StaticResource TextColor}"/>
                                            <TextBlock Text="{Binding Type}" FontSize="10" Foreground="{StaticResource SecondaryTextColor}" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <TextBlock x:Name="NoEventsText" Text="The chronicle awaits the first events..." FontStyle="Italic" Foreground="{StaticResource SecondaryTextColor}" Visibility="Collapsed"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource PanelBackground}" BorderBrush="{StaticResource AccentColor}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="15,10">
                <TextBlock Text="âœ¨ Inspired by Caves of Qud - Every creature has a story" FontSize="11" Foreground="{StaticResource SecondaryTextColor}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
