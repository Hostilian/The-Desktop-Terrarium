# Auto detect text files and perform LF normalization
* text=auto eol=lf

# C# and related files
*.cs text eol=lf
*.csproj text eol=lf
*.sln text eol=lf
*.xaml text eol=lf
*.props text eol=lf
*.targets text eol=lf

# Configuration files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.xml text eol=lf
*.config text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Scripts
*.sh text eol=lf
*.ps1 text eol=lf

# Keep Windows batch files with CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
