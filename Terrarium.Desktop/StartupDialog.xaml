<Window x:Class="Terrarium.Desktop.StartupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Terrarium.Desktop"
        mc:Ignorable="d"
        Title="Select Terrarium Type"
        Height="360"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <!-- Custom Template for Dropdown Items -->
        <DataTemplate x:Key="TerrariumItemTemplate" DataType="{x:Type local:TerrariumTypeOption}">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- Icon with Circle Background -->
                <Ellipse Grid.Column="0" Width="32" Height="32" Fill="{Binding ThemeColor}" Opacity="0.1"/>
                <Path Grid.Column="0" 
                      Data="{Binding IconGeometry}" 
                      Fill="{Binding ThemeColor}" 
                      Stretch="Uniform" 
                      Width="20" Height="20" 
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- Text Content -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                    <TextBlock Text="{Binding Title}" 
                               FontFamily="{Binding TitleFont}" 
                               Foreground="{Binding ThemeColor}" 
                               FontSize="{Binding TitleFontSize}" 
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding Subtitle}" 
                               FontSize="{Binding SubtitleFontSize}" 
                               Foreground="Gray" />
                </StackPanel>
            </Grid>
        </DataTemplate>
        
        <!-- Style for ComboBoxItem to create Hover Effect -->
        <Style x:Key="FlatComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Name="Border" 
                                Padding="{TemplateBinding Padding}" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Margin="2">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="START NEW GAME" FontWeight="Bold" FontSize="12" Foreground="Gray" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="1" Text="Choose your widget :) I hope you like it, it is getting upgraded everyweek with new widgets" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20" TextWrapping="Wrap">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" Opacity="0.2" ShadowDepth="2" BlurRadius="5"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- The Fancy ComboBox -->
        <ComboBox Grid.Row="2" 
                  Name="TerrariumComboBox"
                  ItemsSource="{Binding Options}"
                  ItemTemplate="{StaticResource TerrariumItemTemplate}"
                  ItemContainerStyle="{StaticResource FlatComboBoxItem}"
                  SelectedIndex="0"
                  Height="60"
                  MaxDropDownHeight="450"
                  VerticalContentAlignment="Center"
                  Padding="10"
                  BorderThickness="1"
                  BorderBrush="#DDDDDD"
                  ScrollViewer.CanContentScroll="False">
            <ComboBox.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="10"/>
            </ComboBox.Effect>
        </ComboBox>

        <Button Grid.Row="3" 
                Content="LAUNCH" 
                Name="StartButton" 
                Click="StartButton_Click"
                Width="150" Height="40"
                HorizontalAlignment="Right"
                Margin="0,20,0,0"
                Background="Black"
                Foreground="White"
                FontWeight="Bold"
                FontSize="14"
                BorderThickness="0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
